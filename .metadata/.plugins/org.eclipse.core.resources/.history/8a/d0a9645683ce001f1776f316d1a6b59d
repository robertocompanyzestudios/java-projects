package programacionPOO;

public class Automovil {
	public String marca;
	public String modelo;
	public String color = "blanco";
	public int cilindrada;
	public int velocidad = 0;
	
	
	public String detalle() {
		String salida = "";
		
		salida = "\nMarca = " + this.marca + "\nModelo = " + this.modelo + "\nColor = " + this.color 
				+"\nCilindrada = " + this.cilindrada + "\nVelocidad = " + this.velocidad;
		
		return salida;
	}
	
	public int acelerar(int velocidad){
		 velocidad = velocidad + 10;
		return velocidad;
	}
	
	public int frenar(int velocidad ){
		 velocidad = velocidad - 10;
		return velocidad;
	}
	
	public int frenarAuto(int velocidad) {
		int tiempo;
		
		for(int i = 0;velocidad > 0; i++) {
			tiempo = tiempo + 1
		}
		
		return tiempo;
	}
	
}
